{
  "settings": {
    "analysis": {
      "analyzer": {
        "text_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [
            "asciifolding",
            "lowercase",
            "kstem"
          ],
          "char_filter": [ 
            "stripHTMLFilter" 
          ]
        },
        "path_analyzer": {
          "type": "custom",
          "tokenizer": "path_tokenizer"
        }
      },
      "char_filter": {
        "stripHTMLFilter": {
          "type": "html_strip",
          "escaped_tags": []
        }
      },
      "tokenizer": {
        "path_tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "|"
        }
      }
    }
  },
  "mappings": {
    "page": {
      "properties": {
        "num": {
          "type": "text",
          "index": true,
          "analyzer": "text_analyzer",
          "store": true,
          "boost": 100
        },
        "title": {
          "term_vector": "with_positions_offsets",
          "index": true,
          "type": "text",
          "analyzer": "text_analyzer",
          "store": true,
          "boost": 5
        },
        "body": {
          "term_vector": "with_positions_offsets",
          "index": true,
          "type": "text",
          "analyzer": "text_analyzer",
          "store": true
        },
        "url": {
          "type": "text",
          "index": false,
          "store": true
        },
        "path": {
          "type": "text",
          "analyzer": "path_analyzer",
          "search_analyzer": "path_analyzer"
        }
      }
    }
  }
}
